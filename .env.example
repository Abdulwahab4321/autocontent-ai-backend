PORT=4000
NODE_ENV=development
JWT_SECRET=your-secret-key

# MongoDB (default: local). Use Atlas connection string in production.
MONGODB_URI=mongodb://localhost:27017/autocontent-ai

# Stripe (PRD: Payments). Leave empty to use mock checkout.
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Optional: Stripe Price ID (e.g. price_xxx) from Dashboard. If set, Checkout uses this product/price.
STRIPE_PRICE_ID=

# Local + domain dono ke liye: comma-separated (no spaces around comma)
FRONTEND_URL=http://localhost:3000,https://yourdomain.com
SHOPIFY_APP_STORE_URL=https://apps.shopify.com

# Comma-separated emails that get admin role (PRD: Admin)
ADMIN_EMAILS=admin@example.com

# Forgot-password: email only sent if SMTP is set. Use .env for real values (do not put passwords here).
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
